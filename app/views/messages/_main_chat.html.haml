.chat-main
  .chat-info
    .chat-info__group
      = @group.name
      .chat-info__group__list
        .chat-info__group__list-menber
          Member:
        .chat-info__group__list-name
          - @group.users.each do |user|
            = user.name
    .chat__editbutton
      = link_to edit_group_path(@group.id), class:"content-button" do
        Edit
  .message-list
    = render @messages
    -# .message-list__message
    -#   .chat-message
    -#     .chat-message__name
    -#       masa
    -#     .chat-message__daytime
    -#       2019/11/20(Wed)17:43:01
    -#   .greeting
    -#     おはよう！
    -# .chat-message2  
    -#   .chat-message2__box
    -#     .chat-message2__box__name2
    -#       masa
    -#     .chat-message2__box__daytime2
    -#       2019/11/20(Wed)17:43:34
    -#   .greeting2
    -#     今日は夜から雨
  .Footer
    = form_with model: [@group, @message], html: {class: "Form"}, local: true do |f|
      .Form__contents
        = f.text_field :content, class: 'Form__contents__inputContent', placeholder: 'type a message'
        = f.label :image, class: 'Form__contents__inputImage' do
          = icon('far', 'image', class: 'Form__contents__inputImage')
          = f.file_field :image, class: 'Hidden'
      = f.submit 'Send', class: 'Form__submit'
