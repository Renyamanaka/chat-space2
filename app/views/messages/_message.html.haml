.message-list__message{data: {message: {id: message.id}}}
  .chat-message
    .chat-message__name
      = message.user.name
    .chat-message__daytime
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .Message
    .Message
    - if message.content.present?
      %p.Message__content
        = message.content
    = image_tag message.image.url, class: 'Message__image' if message.image.present?